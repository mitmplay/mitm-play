{
  "name": "mitm-play",
  "version": "0.9.24",
  "description": "Man in the middle using playwright",
  "main": "mitm-play.js",
  "bin": {
    "mitm-play": "bin/mitm-run.js"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "start": "node --max-http-header-size=81000 --inspect ./mitm-play.js",
    "client": "esbuild ws-client/_src/ws-client.js --outdir=ws-client --sourcemap=inline --minify-whitespace --target=chrome89 --bundle  --watch",
    "client2": "rollup --config ws-client/rollup.config.js -w",
    "standard": "standard --verbose | snazzy",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest --runInBand",
    "test": "jest"
  },
  "author": "Widi Harsojo",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitmplay/mitm-play.git"
  },
  "bugs": {
    "url": "https://github.com/mitmplay/mitm-play/issues"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "ansi-colors": "4.1.1",
    "chokidar": "3.5.2",
    "clear-module": "4.1.1",
    "cssbeautify": "0.3.1",
    "esbuild": "0.13.0",
    "express": "4.17.1",
    "fast-glob": "3.2.7",
    "fs-extra": "10.0.0",
    "highlight.js": "10.7.1",
    "json-stringify-pretty-compact": "3.0.0",
    "knex": "^0.95.11",
    "make-fetch-happen": "9.1.0",
    "markdown-it": "12.0.4",
    "markdown-it-anchor": "7.1.0",
    "markdown-it-container": "3.0.0",
    "playwright": "1.15.2",
    "prompt-sync": "^4.1.6",
    "rollup": "2.56.3",
    "rollup-plugin-scss": "3.0.0",
    "rollup-plugin-svelte": "7.1.0",
    "sass": "1.42.1",
    "sqlite3": "^4.2.0",
    "stack-trace": "0.0.10",
    "svelte": "^3.43.0",
    "svelte-preprocess": "4.9.4",
    "user": "*",
    "ws": "8.2.2",
    "yargs-parser": "20.2.7"
  },
  "devDependencies": {
    "css-selector-generator": "3.0.1",
    "install": "0.13.0",
    "jest": "^27.3.0",
    "nock": "13.0.11",
    "npm": "^7.20.6",
    "rollup-plugin-cjs-es": "1.0.1",
    "rollup-plugin-sourcemaps": "0.6.3",
    "snazzy": "9.0.0",
    "standard": "^16.0.4"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "standard": {
    "ignore": [
      "/ws-client/index.js",
      "/plugins/chrome/js/bundle.js",
      "/plugins/chrome/vs/**/*.js",
      "/plugins/js-lib/**/*.js",
      "/user-route/**/*.js"
    ]
  }
}
