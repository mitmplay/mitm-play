{
  "name": "mitm-play",
  "version": "0.9.90",
  "description": "Man in the middle using playwright",
  "main": "mitm-play.js",
  "bin": {
    "mitm-play": "bin/mitm-run.js"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "start": "node --max-http-header-size=81000 --inspect ./mitm-play.js",
    "client": "esbuild ws-client/_src/ws-client.js --outdir=ws-client --sourcemap=inline --minify-whitespace --target=chrome89 --bundle  --watch",
    "client2": "rollup --config ws-client/rollup.config.js -w",
    "client3": "rollup --config a11y/rollup.config.js -w",
    "standard": "standard --verbose | snazzy",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest --runInBand",
    "test": "jest"
  },
  "author": "Widi Harsojo",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitmplay/mitm-play.git"
  },
  "bugs": {
    "url": "https://github.com/mitmplay/mitm-play/issues"
  },
  "dependencies": {
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "ansi-colors": "4.1.1",
    "chokidar": "3.5.3",
    "clear-module": "4.1.2",
    "cssbeautify": "0.3.1",
    "esbuild": "0.13.0",
    "express": "4.17.1",
    "fast-glob": "3.2.11",
    "fs-extra": "10.0.0",
    "highlight.js": "11.4.0",
    "json-stringify-pretty-compact": "3.0.0",
    "knex": "0.95.15",
    "make-fetch-happen": "10.0.3",
    "markdown-it": "12.3.2",
    "markdown-it-anchor": "8.4.1",
    "markdown-it-container": "3.0.0",
    "playwright": "1.22.2",
    "prompt-sync": "4.1.6",
    "rollup": "2.67.2",
    "rollup-plugin-scss": "3.0.0",
    "rollup-plugin-svelte": "7.1.0",
    "sass": "1.49.7",
    "sqlite3": "5.0.8",
    "stack-trace": "0.0.10",
    "svelte": "3.46.4",
    "svelte-preprocess": "4.10.3",
    "user": "*",
    "ws": "8.7.0",
    "yargs-parser": "21.0.0"
  },
  "devDependencies": {
    "css-selector-generator": "3.5.3",
    "install": "0.13.0",
    "jest": "27.3.0",
    "nock": "13.2.2",
    "npm": "^6.14.15",
    "snazzy": "9.0.0",
    "standard": "16.0.4"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "standard": {
    "ignore": [
      "/ws-client/index.js",
      "/plugins/chrome/js/bundle.js",
      "/plugins/chrome/vs/**/*.js",
      "/plugins/js-lib/**/*.js",
      "/user-route/**/*.js"
    ]
  }
}
