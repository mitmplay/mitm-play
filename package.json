{
  "name": "mitm-play",
  "version": "0.8.222",
  "description": "Man in the middle using playwright",
  "main": "mitm-play.js",
  "bin": {
    "mitm-play": "bin/mitm-run.js"
  },
  "scripts": {
    "coverage": "jest --coverage",
    "start": "node --max-http-header-size=81000 --inspect ./mitm-play.js",
    "client": "rollup -wc ws-client/rollup.js",
    "standard": "standard --verbose | snazzy",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest --runInBand",
    "test": "jest"
  },
  "author": "Widi Harsojo",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitm-proxy/mitm-play.git"
  },
  "bugs": {
    "url": "https://github.com/mitm-proxy/mitm-play/issues"
  },
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "chokidar": "^3.4.3",
    "clear-module": "^4.1.1",
    "cssbeautify": "^0.3.1",
    "express": "^4.17.1",
    "fast-glob": "^3.2.4",
    "fs-extra": "^9.0.1",
    "highlight.js": "^10.4.0",
    "make-fetch-happen": "^8.0.10",
    "markdown-it": "^12.0.2",
    "markdown-it-anchor": "^6.0.1",
    "markdown-it-container": "^3.0.0",
    "playwright": "^1.7.1",
    "prompt-sync": "^4.2.0",
    "ws": "^7.3.1",
    "yargs-parser": "^20.2.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^10.0.0",
    "css-selector-generator": "^2.1.2",
    "install": "^0.13.0",
    "jest": "^26.5.3",
    "nock": "^13.0.4",
    "npm": "^6.14.8",
    "rollup": "^2.30.00",
    "rollup-plugin-cjs-es": "^1.0.1",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "snazzy": "^8.0.0",
    "standard": "^15.0.0"
  },
  "engines": {
    "node": ">=12.19.0"
  },
  "standard": {
    "ignore": [
      "/ws-client/index.js",
      "/plugins/chrome/js/bundle.js",
      "/plugins/chrome/vs/**/*.js",
      "/plugins/js-lib/**/*.js",
      "/user-route/**/*.js"
    ]
  }
}
